		"supertest": "^6.2.4",
		"ts-jest": "^28.0.8",
		"ts-node": "^8.1.0",
		"typescript": "^4.8.2"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.{js,ts,css,md,html,json}": "npm run format"
	}
