		"lodash": "^4.17.21",
		"moment": "^2.29.4",
		"nodemon": "^2.0.19",
		"redis": "^4.2.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/jest": "^28.1.7",
		"@types/node": "^18.6.3",
		"@types/redis": "^4.0.11",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"concurrently": "^7.3.0",
